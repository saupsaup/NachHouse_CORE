{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	// Attention: Keep structure and do not change labels of this file!
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Mosaic project compiler",
			"type": "process",
			"command": "C:\\Program Files (x86)\\Teco\\Mosaic 2025.1\\Application\\MosaicL.exe",
			"args": [
				"-ttr",
				"-lnk",
				"-sg+",
				"-sr-",
				"-log-",
				"-pub",
				"-olc-",
				"-psw-",
				"-plcpsw-",
				"-sc-",
				"-sl-",
				"-exml-",
				"-epub-",
				"-eexp",
				"${workspaceFolderBasename}.mak"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": {
				"owner": "st",
				"fileLocation": [
					"relative",
					"${workspaceFolder}"
				],
				"pattern": {
					"regexp": "^\\[.+:(.*)\\]\\s*(.*)\\s+\\((\\d+),\\s*(\\d+)\\):\\s*(.*)$",
					"severity": 1,
					"file": 2,
					"line": 3,
					"column": 4,
					"message": 5
				}
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Upload TecoTar",
			"type": "process",
			"command": "C:\\Program Files (x86)\\Teco\\Mosaic 2025.1\\Application\\VSC2m.exe",
			"args": [
				"192.168.33.200:61682",
				"upload-ttr",
				"--autorun"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "test",
				"isDefault": false
			}
		},
		{
			"label": "Disconnect Mosaic",
			"type": "process",
			"command": "C:\\Program Files (x86)\\Teco\\Mosaic 2025.1\\Application\\VSC2m.exe",
			"args": [
				"DISCONNECT"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "test",
				"isDefault": false
			}
		},
		{
			"label": "Connect Mosaic",
			"type": "process",
			"command": "C:\\Program Files (x86)\\Teco\\Mosaic 2025.1\\Application\\VSC2m.exe",
			"args": [
				"CONNECT"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "test",
				"isDefault": false
			}
		},
		{
			"label": "Set PLC HALT",
			"type": "process",
			"command": "C:\\Program Files (x86)\\Teco\\Mosaic 2025.1\\Application\\VSC2m.exe",
			"args": [
				"192.168.33.200:61682",
				"halt"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "test",
				"isDefault": false
			}
		},
		{
			"label": "Set PLC RUN",
			"type": "process",
			"command": "C:\\Program Files (x86)\\Teco\\Mosaic 2025.1\\Application\\VSC2m.exe",
			"args": [
				"192.168.33.200:61682",
				"run"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "test",
				"isDefault": false
			}
		},
		{
			"label": "DEBUG Mosaic",
			"type": "process",
			"command": "C:\\Program Files (x86)\\Teco\\Mosaic 2025.1\\Application\\VSC2m.exe",
			"args": [
				"DEBUG"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "test",
				"isDefault": false
			}
		}
	]
}
